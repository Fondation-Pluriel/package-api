{
    "name": "fondation-pluriel/package-api",
    "description": "Package permettant d'installer les dépendances d'un projet API et de préparer des fichiers de configuration",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "FondationPluriel\\CreateApi\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Fondation Pluriel"
        }
    ],
    "require": {
        "php": ">=8.2",
        "lexik/jwt-authentication-bundle": "^3.1",
        "nelmio/api-doc-bundle": "^4.29"
    },
    "scripts": {
        "post-install-cmd": [
            "symfony console lexik:jwt:generate-keypair",
            "cp vendor/fondation-pluriel/package-api/config/packages/nelmio_api_doc.yaml config/packages/nelmio_api_doc.yaml",
            "cp vendor/fondation-pluriel/package-api/config/routes/nelmio_api_doc.yaml config/routes/nelmio_api_doc.yaml",
            "cp vendor/fondation-pluriel/package-api/config/packages/lexik_jwt_authentication.yaml config/packages/lexik_jwt_authentication.yaml",
            "cp venddor/fondation-pluriel/package-api/config/packages/security.yaml config/packages/security.yaml"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "6.0.*"
        }
    }
}
